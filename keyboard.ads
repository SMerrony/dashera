with Gdk.Types;

with Terminal;

package Keyboard is

   task Key_Handler is
      entry Start (Dest : in Terminal.Connection_T);
      entry Stop;
      entry Press (Key : in Gdk.Types.Gdk_Key_Type);
      entry Release (Key : in Gdk.Types.Gdk_Key_Type);
   end Key_Handler;

end Keyboard;